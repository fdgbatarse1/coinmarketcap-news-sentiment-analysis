{
    "build": {
        "dockerfile": "Dockerfile"
    },
    "runArgs": ["--gpus", "all"],
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.mypy-type-checker",
                "charliermarsh.ruff",
                "ms-python.debugpy",
                "ms-toolsai.jupyter",
                "ms-python.isort",
                "tamasfe.even-better-toml"
            ]
        }
    },
    "postCreateCommand": "git clone https://github.com/esauflores/dotfiles ~/.dotfiles && ~/.dotfiles/install.sh"
}